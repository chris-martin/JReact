<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Black box">

  <test name="Pipe basics">
    <classes>
      <class name="org.jreact.core.PipePutTest"/>
    </classes>
  </test>

  <test name="Pipe limitations">
    <classes>
      <class name="org.jreact.core.PipeLimitTimesTest"/>
      <class name="org.jreact.core.PipeLimitStreamTest"/>
    </classes>
  </test>

  <test name="Pipe transformations">
    <classes>
      <class name="org.jreact.core.PipeMapTest"/>
    </classes>
  </test>

  <test name="Constant basics">
    <classes>
      <class name="org.jreact.core.SignalGetTest"/>
      <class name="org.jreact.core.SignalEqualsObjectTest"/>
      <class name="org.jreact.core.SignalEqualsValueTest"/>
      <class name="org.jreact.core.SignalHashCodeTest"/>
    </classes>
  </test>

  <test name="Constant limitations">
    <classes>
      <class name="org.jreact.core.SignalLimitTest"/>
    </classes>
  </test>

  <test name="Constant transformations">
    <classes>
      <class name="org.jreact.core.SignalMapTest"/>
    </classes>
  </test>

  <test name="Variable basics">
    <classes>
      <class name="org.jreact.core.VariableGetAndPutTest"/>
      <class name="org.jreact.core.VariableEqualsObjectTest"/>
      <class name="org.jreact.core.VariableEqualsValueTest"/>
      <class name="org.jreact.core.VariableHashCodeTest"/>
    </classes>
  </test>

  <test name="Variable looping">
    <classes>
      <class name="org.jreact.core.VariableLoopTest"/>
      <class name="org.jreact.core.VariableChangesTest"/>
    </classes>
  </test>

  <test name="Variable limitations">
    <classes>
      <class name="org.jreact.core.VariableLimitTest"/>
    </classes>
  </test>

  <test name="Variable transformations">
    <classes>
      <class name="org.jreact.core.VariableMapTest"/>
    </classes>
  </test>

</suite>
